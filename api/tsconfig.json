{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
  },
  "include": ["./src/**/*"]
}
